<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Sign In</title>


</head>
<body>

<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username], :placeholder => "Username" %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :placeholder => "Password" %>
    </div>
    <!-- We will get to this in a while -->
    <div class="field">
      <%= label_tag :remember_me ,:class => "checkbox vsmall" do %>
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          Remember me
      <% end %>
    </div>
    <!-- end block -->
    <br>
    <div class="actions">
      <%= submit_tag :sign_in, :value => "Sign in" %>
    </div>
    <br>
    <div class="messages">
      <% flash.each do |name,msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </div>
    <p>
      <%= link_to 'Forgot Password?', new_password_reset_path %>
    </p>
<% end %>

  </div>
</div>


</body>
</html>