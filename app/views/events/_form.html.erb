
<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: 'Title' %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, placeholder: 'Description' %>
    </div>

    <div class="field">

      <%= f.label :start_time %><br>
      <%= f.text_field :start_time, placeholder: 'Start-Time', :class => 'datetimepicker' %>
    </div>
    <div class="field">
      <%= f.label :end_time %><br>
      <%= f.text_field :end_time, placeholder: 'End-Time', :class => 'datetimepicker'  %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<script type="text/javascript">
    $('.datetimepicker').datetimepicker();
</script>